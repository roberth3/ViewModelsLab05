@model ViewModelsLab.Models.ItemDetailViewDetail

@{
    ViewBag.Title = "AddItem";
}

<h2>Add Item To Order</h2>

@*// TODO: Complete list *@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Item</legend>

        <div class="hidden-field">
            @Html.HiddenFor(model => model.Id)            
        </div>
		
		<div class="editor-field">
            @Html.DropDownListFor(model => model.OrderLineItemProductName, 
                Model.ProductList, 
                "Please select...")
            @Html.ValidationMessageFor(model => model.OrderLineItemProductName)
        </div>
		
        <div class="editor-label">
            @Html.LabelFor(model => model.OrderLineItemQuantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderLineItemQuantity)
            @Html.ValidationMessageFor(model => model.OrderLineItemQuantity)
        </div>

        <p>
            <input type="submit" value="Add to Order" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
